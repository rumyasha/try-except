@dp.message()
async def process_message(message: types.Message):
    user_id = message.from_user.id

    if user_id in user_orders and "coffee" in user_orders[user_id]:
        if message.text in ["–ú–∞–ª–µ–Ω—å–∫–∏–π", "–°—Ä–µ–¥–Ω–∏–π", "–ë–æ–ª—å—à–æ–π"]:
